@model Musify_web.Models.Artist
@{
    ViewBag.Title = "Artist_Create";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="container body-content">
    
    <div class="form-container" style="width:900px">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Artist Creation</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.Artist_name, htmlAttributes: new { @class = "control-label col-md" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Artist_name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Artist_name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-default" />

                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-4"></div>
        </div>
        <div>
            @Html.ActionLink("Back to Home", "Index")
        </div>
    </div>
</div>

