@model Musify_web.Models.album
@{
    ViewBag.Title = "Album_create";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="container body-content">
   
    <div class="form-container" style="width:900px">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">

                @using (Html.BeginForm("Album_create", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4 class="text-center">Album Creation</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.Album_name, htmlAttributes: new { @class = "control-label col-md" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Album_name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Album_name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Album_year, htmlAttributes: new { @class = "control-label col-md" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Album_year, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Album_year, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Album_img, htmlAttributes: new { @class = "control-label col-md" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.ImageFile, new { type = "file" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-outline-primary" />
                                <br />
                                <p class="text-danger"> @ViewBag.msg</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-4"></div>
        </div>

        <div>
            @Html.ActionLink("Back to List", "Album_display", "", new { @class = "btn-link" })
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


