@model Musify_web.Models.Artist

@{
    ViewBag.Title = "Artist Delete";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 border shadow p-4">
            <div>
                <h3>Are you sure you want to delete this?</h3>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Artist_name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Artist_name)
                    </dd>

                </dl>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <h6 class="text-danger"> Make Sure You Delete Songs Before Deleting Artist</h6>
                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        @Html.ActionLink("Back to List", "Artist_display")
                    </div>
                }
            </div>
           
        </div>
    </div>

</div>
