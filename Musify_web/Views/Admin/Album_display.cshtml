@model IEnumerable<Musify_web.Models.album>
@{
    ViewBag.Title = "Album_display";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="container body-content">
    <div class="row">
        <div class="col-md-3">
            <a href="/Admin/Album_create" class="btn btn-outline-primary mb-2"><span class="material-icons-outlined sticky-top align-bottom">create_new_folder</span>Create New</a>
        </div>
        <div class="col-md-4"></div>
        <div class="col-md-5">
            @using (Html.BeginForm())
            {
                <div class="input-group ">
                    <div class="input-group-prepend">
                        @Html.Label("Album Name", new { @class = "input-group-text" })
                    </div>
                    @Html.TextBox("Search")
                    <div class="input-group-append">
                        <input type="submit" name="submit" value="Search" class="btn btn-secondary" />
                    </div>
                </div>
            }
        </div>
    </div>
    
    <table class="table  table-responsive-md table-hover border-bottom border-top border-top border-left shadow-lg">
        <tr class="text-white bg-dark">
            <th>
                @Html.DisplayNameFor(model => model.Album_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album_year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album_img)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>




                <td>
                    @Html.DisplayFor(modelItem => item.Album_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Album_year)
                </td>
                <td>
                    <img src="@item.Album_img" width="100" height="100" />
                </td>
                <td>
                    @Html.ActionLink("delete_outline", "album_delete", new { id = item.Album_id }, new { @class = "material-icons-outlined text-danger align-bottom " })
                </td>
            </tr>
        }

    </table>
</div>


